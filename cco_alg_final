#include <stdio.h>
#include <stdlib.h>
#include <math.h>
#include <time.h>


typedef struct{
    long int pQuad;
    float pCirc;
    float x;
    float y;
    float distanciaeixo;
    float deltax;
    float deltay;
    float pi;
}PI;

PI* repeticao(int tam){
tam = 10000;
PI *pi = (PI*) malloc(TAM * sizeof(PI));

    printf("Digite o maximo de pontos que tera no quadrado: ");
    scanf("%i", &pi->pQuad);
    
    srand(time(NULL));
        for(int cont = 0; cont < pi->pQuad;cont++){
        
                pi->x = rand()  / (float)RAND_MAX;
                pi->y = rand()  / (float)RAND_MAX;
                
                    if(pi->x < 0){
                        pi->x * (-1);
                    }
                    if(pi->y < 0){
                        pi->y * (-1);
                    }
                    
                pi->deltax = pow((pi->x - 0.5),2);
                pi->deltay = pow((pi->y - 0.5),2);
                
                    pi->distanciaeixo = sqrt(pi->deltax + pi->deltay);
                    if(pi->distanciaeixo < 0.5){
                        pi->pCirc = pi->pCirc + 1;
                }
            }
            
        pi->pi = 4 * (pi->pCirc / pi->pQuad);
            printf("x = %.14f", pi->pi);
printf("\n");
    return pi;
}

void main(int tam){
    repeticao(tam);
}



